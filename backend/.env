# Database Configuration
# DB_TYPE can be 'local' for MySQL or 'aws' for DynamoDB
DB_TYPE=local

# MySQL Configuration (for local development)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=app_user
MYSQL_PASSWORD=app_password
MYSQL_DATABASE=ui_automation_platform

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# DynamoDB Tables (for AWS deployment)
DYNAMODB_TEST_SUITES_TABLE=ui-automation-test-suites
DYNAMODB_TEST_CASES_TABLE=ui-automation-test-cases

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:3000
